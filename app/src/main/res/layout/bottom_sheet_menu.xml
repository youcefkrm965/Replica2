<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/option_edit_prefs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Edit Shared Preferences"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:drawableStart="@drawable/ic_edit" />

    <TextView
        android:id="@+id/option_export_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Export Data"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:drawableStart="@drawable/ic_export" />

    <TextView
        android:id="@+id/option_uninstall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Uninstall"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:drawableStart="@drawable/ic_uninstall" />

</LinearLayout>
